<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Add the Full Disk Access entitlement -->
    <key>com.apple.security.full-disk-access</key>
    <true/>
    
    <!-- Add the files and folders that require Full Disk Access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <array>
        <string>${HOME}/Library/Messages/chat.db</string>
    </array>
    
    <!-- Add the files and folders that require Full Disk Access -->
    <key>com.apple.security.temporary-exception.apple-events</key>
    <array>
        <string>com.apple.messages</string>
    </array>
</dict>
</plist>
